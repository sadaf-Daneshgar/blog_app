<h1>Best Quotes😍</h1>
<div class="container">
  <div class="post">
    <h2>Post #<%= @post.id %> by 
      <%= link_to @post.user.name, user_path(@post.user) %>
    </h2>
    <p>Comments: <%= @post.comments.count %></p>
    <p>Likes: <%= @post.likes.count %></p>
    <p><%= @post.text %></p>
  </div>
    <div class="comments">
        <h2>Comments</h2>
        <% @post.comments.each do |comment| %>
            <div class="comment">
            <p><%= comment.text %></p>
            <p>By: <%= link_to comment.user.name, user_path(comment.user) %></p>
            </div>
        <% end %>
    </div>
</div>