<h3 style="color: #336699; margin: 12px 50px">Create a new comment</h3>
<%= form_with model: [@user, @post, @comment], url: user_post_comments_path(@user, @post), method: :post do |f| %>
  <div class="inputs">
    <%= f.label :text, style: "font-weight: bold;" %>
    <%= f.text_area :text, style: "width: 220px; height: 80px; padding: 10px" %>
  </div>
  <div>
    <%= f.submit "Submit the comment", style: "background-color: #33cc33; margin: 10px 110px; color: #fff; padding: 10px 15px; cursor: pointer;" %>
  </div>
<% end %>
